<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/transparent_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/custom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="262dp"
            android:layout_height="156dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/enter_phone_background" />

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="58dp"
            android:layout_height="24dp"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@+id/positiveButton"
            android:background="@drawable/enter_pphonenumber_cancle_selector" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="58dp"
            android:layout_height="24dp"
            android:layout_alignBaseline="@+id/negativeButton"
            android:layout_alignBottom="@+id/negativeButton"
            android:layout_alignRight="@+id/lin"
            android:background="@drawable/enter_phonenumber_ok_selector"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="224dp"
            android:layout_height="35dp"
            android:layout_above="@+id/negativeButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:background="@drawable/enter_phonenumber_edittext" >

            <EditText
                android:id="@+id/yzm"
                android:layout_width="224dp"
                android:layout_height="35dp"
                android:layout_above="@+id/negativeButton"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="33dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="11"
                android:hint="请输入手机号"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>